<section class="mx-5">
    <div class="row">
        <div class="card mx-3 mt-5" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title text-center ">Add Category</h5>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 col-lg-12 ad-product mx-auto">
    
                <form action="/admin/add-category" method="post" name="" id="">
                    <div class=" mb-3">
                        <input type="text" class="form-control" id="basic-default-name" name="Category"
                      placeholder="Enter Category Name" required/>
                    </div>
                    <div class=" d-grid gap-2 col-6 btn mx-auto">
                        <button class="btn btn-primary text-white btn-sm" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>     
    </div>
</div>
<div class="card mx-3 mt-5" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title text-center">Add Sub-category</h5>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 col-lg-12 ad-product mx-auto">
    
                <form action="/admin/add-subcategory" method="post" name="" id="">
                    <div class="row ">
                  <div class="form-row mb-4">
                    <select name="Category" class="form-control">
                      <option value="none" >Select Category</option>
                      {{#each allCategory}}
                      <option >{{this.Category}}</option>
                      {{/each}}
                    </select>
                    <input type="text" class="form-control my-4" id="basic-default-name" name="Sub_category"
                      placeholder="Enter Subcategory" required/>
                    <button type="submit" class="btn btn-primary">Add</button>
                  </div>
                </div>
                </form>
            </div>
        </div>
    </div>     
    </div>
</div>
    </div>
</section>
